@model List<Item>

    @if (@Model == null || @Model.Count() == 0)
    {
        <div>
            <h3>Sorry... There is no one item</h3>
            
        </div>
    }
    else
    {

        <div class="row row-cols-3 justify-content-center">
            @for (int i = 0; i < @Model.Count; i++)
            {
                var properties = @Model[i].Properties;

                <div class="card m-3 col text-center bg-light border-secondary">
                    <div>
                        <div class="card-title"><h3>@Model[i].Name</h3></div>
                        <div class="card-text">
                            <div class="text-wrap">

                                @foreach(var tag in @Model[i].Tags)
                                {
                                    <span>@tag.Name </span>
                                }

                            </div>
                        </div>
                    </div>

                    <div>
                        <i class="bi bi-suit-heart m-2">@Model[i].Likes.Count</i>
                        <i class="bi bi-chat-left-dots m-2">@Model[i].Comments.Count</i>
                    </div>
                </div>
            }
        </div>
    }