@model CreateUserViewModel

<div class="container shadow-lg bg-white rounded-3 col-lg-6 col-md-8">
    <div class="align-content-center align-self-center p-2 px-4">
        <form method="post">
                <div class="d-flex flex-column m-2">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                 <div class="d-flex flex-column m-2">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter e-mail"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column m-2">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column m-2">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-primary btn-block w-100 mt-4 mb-4">Submit</button>

        </form>
    </div>
</div>