@model AuthorizeUserViewModel

<div class="container card border-primary box-shadow w-75">
    <div class="align-content-center align-self-center">
        <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="d-flex flex-column">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>


                <div class="d-flex flex-column">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-outline-primary btn-block w-100 mt-4 mb-4">Submit</button>

        </form>
    </div>
</div>